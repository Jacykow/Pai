@model Pai.DatabaseModels.Tournament

@{
    ViewData["Title"] = "Join";
}
<h2>Join</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to join this tournament?</h3>

<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="JoinConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Join" class="btn btn-success" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>